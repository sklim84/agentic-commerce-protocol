    "CheckoutSessionCreateRequest": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "buyer": {
          "$ref": "#/$defs/Buyer"
        },
        "items": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Item"
          },
          "minItems": 1
        },
        "fulfillment_details": {
          "$ref": "#/$defs/FulfillmentDetails"
        },
        "affiliate_attribution": {
          "$ref": "#/$defs/AffiliateAttribution"
        }
      },
      "required": ["items"]
    },
    "CheckoutSessionUpdateRequest": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "buyer": {
          "$ref": "#/$defs/Buyer"
        },
        "items": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Item"
          }
        },
        "fulfillment_details": {
          "$ref": "#/$defs/FulfillmentDetails"
        },
        "selected_fulfillment_options": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/SelectedFulfillmentOption"
          }
